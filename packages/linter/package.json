{
  "name": "@eventcatalog/linter",
  "version": "1.0.0",
  "description": "A linter for EventCatalog to validate frontmatter and resource references",
  "repository": {
    "type": "git",
    "url": "https://github.com/event-catalog/eventcatalog"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "eventcatalog-linter": "./dist/cli/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:bin": "tsup",
    "test": "vitest --run",
    "test:ci": "vitest --run",
    "format": "prettier --write .",
    "format:diff": "prettier --list-different ."
  },
  "keywords": [
    "eventcatalog",
    "linter",
    "validation",
    "event-driven",
    "architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eventcatalog/sdk": "workspace:*",
    "@types/semver": "^7.7.0",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "ora": "^8.0.1",
    "semver": "^7.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
