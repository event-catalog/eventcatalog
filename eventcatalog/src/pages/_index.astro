---
import { buildUrl } from '@utils/url-builder';
import {
  ChatBubbleLeftIcon,
  RectangleGroupIcon,
  ServerIcon,
  CodeBracketIcon,
  DocumentTextIcon,
  ArrowRightIcon,
  PlusIcon,
} from '@heroicons/react/24/outline';
import config from '@config';

import { getMessages } from '@utils/collections/messages';
import { getDomains } from '@utils/collections/domains';
import { getServices } from '@utils/collections/services';
import { getFlows } from '@utils/collections/flows';
import VerticalSideBarLayout from '@layouts/VerticalSideBarLayout.astro';
import { BookOpenText, Workflow, TableProperties, BookUser, Zap, Terminal, Code2, FileJson } from 'lucide-react';

const { commands = [], events = [], queries = [] } = await getMessages({ getAllVersions: false });
const messages = [...events, ...queries, ...commands];
const domains = await getDomains({ getAllVersions: false });
const services = await getServices({ getAllVersions: false });
const flows = await getFlows({ getAllVersions: false });

// Check if catalog has content
const hasContent = domains.length > 0 || services.length > 0 || messages.length > 0 || flows.length > 0;

const getDefaultUrl = (route: string, defaultValue: string) => {
  if (domains.length > 0) return buildUrl(`/${route}/domains/${domains[0].data.id}/${domains[0].data.latestVersion}`);
  if (services.length > 0) return buildUrl(`/${route}/services/${services[0].data.id}/${services[0].data.latestVersion}`);
  if (flows.length > 0) return buildUrl(`/${route}/flows/${flows[0].data.id}/${flows[0].data.latestVersion}`);
  return buildUrl(defaultValue);
};

const topTiles = [
  {
    title: 'Domains',
    count: domains.length,
    description: 'Business domains',
    href: buildUrl('/discover/domains'),
    icon: RectangleGroupIcon,
    bgColor: 'bg-yellow-500',
    borderColor: 'border-yellow-200',
    textColor: 'text-yellow-600',
    emptyText: 'No domains yet',
    addHref: 'https://www.eventcatalog.dev/docs/domains',
  },
  {
    title: 'Services',
    count: services.length,
    description: 'Documented services',
    href: buildUrl('/discover/services'),
    icon: ServerIcon,
    bgColor: 'bg-pink-500',
    borderColor: 'border-pink-200',
    textColor: 'text-pink-600',
    emptyText: 'No services yet',
    addHref: 'https://www.eventcatalog.dev/docs/services',
  },
  {
    title: 'Messages',
    count: messages.length,
    description: 'Events, commands & queries',
    href: buildUrl('/discover/events'),
    icon: ChatBubbleLeftIcon,
    bgColor: 'bg-blue-500',
    borderColor: 'border-blue-200',
    textColor: 'text-blue-600',
    emptyText: 'No messages yet',
    addHref: 'https://www.eventcatalog.dev/docs/messages',
  },
  {
    title: 'Flows',
    count: flows.length,
    description: 'Business flows',
    href: buildUrl('/discover/flows'),
    icon: Workflow,
    bgColor: 'bg-[rgb(var(--ec-accent))]',
    borderColor: 'border-[rgb(var(--ec-accent)/0.3)]',
    textColor: 'text-[rgb(var(--ec-accent))]',
    emptyText: 'No flows yet',
    addHref: 'https://www.eventcatalog.dev/docs/flows',
  },
];

const quickActions = [
  {
    title: 'Documentation',
    description: 'Browse all documented resources',
    icon: BookOpenText,
    href: getDefaultUrl('docs', 'domains'),
    iconBg: 'bg-blue-50',
    iconColor: 'text-blue-600',
    hoverBorder: 'hover:border-blue-300',
  },
  {
    title: 'Visualizer',
    description: 'Interactive architecture diagrams',
    icon: Workflow,
    href: getDefaultUrl('visualiser', 'domains'),
    iconBg: 'bg-[rgb(var(--ec-accent-subtle))]',
    iconColor: 'text-[rgb(var(--ec-accent))]',
    hoverBorder: 'hover:border-[rgb(var(--ec-accent))]',
  },
  {
    title: 'Discover',
    description: 'Search and filter all resources',
    icon: TableProperties,
    href: buildUrl('/discover/events'),
    iconBg: 'bg-teal-50',
    iconColor: 'text-teal-600',
    hoverBorder: 'hover:border-teal-300',
  },
  {
    title: 'Schema Explorer',
    description: 'Browse and compare schemas',
    icon: FileJson,
    href: buildUrl('/schemas/explorer'),
    iconBg: 'bg-amber-50',
    iconColor: 'text-amber-600',
    hoverBorder: 'hover:border-amber-300',
  },
];

const learnLinks = [
  {
    title: 'Getting Started',
    description: 'Set up your first catalog',
    href: 'https://www.eventcatalog.dev/docs/development/getting-started/introduction',
    icon: BookOpenText,
  },
  {
    title: 'Generators & Plugins',
    description: 'AsyncAPI, OpenAPI integrations',
    href: 'https://www.eventcatalog.dev/integrations',
    icon: Zap,
  },
  {
    title: 'SDK & CLI',
    description: 'Programmatic catalog access',
    href: 'https://www.eventcatalog.dev/docs/sdk',
    icon: Terminal,
  },
];
---

<VerticalSideBarLayout title="EventCatalog">
  <div class="min-h-screen font-inter">
    <!-- Hero Section -->
    <div class="relative bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] border-b border-[rgb(var(--ec-page-border))]">
      <main class="container px-6 lg:px-8 mx-auto py-10 max-w-[85em]">
        <div class="max-w-3xl">
          <h1 class="text-3xl md:text-4xl font-bold mb-3 text-[rgb(var(--ec-page-text))] tracking-tight">
            {config?.organizationName || 'EventCatalog'}
          </h1>
          <p class="text-base text-[rgb(var(--ec-page-text-muted))] leading-relaxed mb-6">
            {
              config.tagline ||
                'Explore and understand your event-driven architecture. Browse documentation, visualize dependencies, and discover how your systems communicate.'
            }
          </p>

          <!-- Primary CTAs -->
          <div class="flex flex-wrap items-center gap-3">
            <a
              href={getDefaultUrl('docs', 'domains')}
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-[rgb(var(--ec-button-bg))] text-[rgb(var(--ec-button-text))] rounded-lg font-medium hover:bg-[rgb(var(--ec-button-bg-hover))] transition-colors"
            >
              <BookOpenText className="w-4 h-4" />
              Explore Docs
            </a>
            <a
              href={getDefaultUrl('visualiser', 'domains')}
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] text-[rgb(var(--ec-page-text))] border border-[rgb(var(--ec-page-border))] rounded-lg font-medium hover:bg-[rgb(var(--ec-content-hover))] hover:border-[rgb(var(--ec-accent))] transition-colors"
            >
              <Workflow className="w-4 h-4" />
              View Architecture
            </a>
          </div>
        </div>
      </main>
    </div>

    <!-- Main Content -->
    <main class="container px-6 lg:px-8 mx-auto py-8 max-w-[85em]">
      <!-- Architecture Stats -->
      <section class="mb-10">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-semibold uppercase tracking-wider text-[rgb(var(--ec-page-text-muted))]">Your Catalog</h2>
          {
            hasContent && (
              <a href={buildUrl('/discover/events')} class="text-sm text-[rgb(var(--ec-page-text-muted))] hover:text-[rgb(var(--ec-page-text))] flex items-center gap-1">
                View all
                <ArrowRightIcon className="w-3 h-3" />
              </a>
            )
          }
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {
            topTiles.map((tile: any) =>
              tile.count > 0 ? (
                <a
                  href={tile.href}
                  class={`group relative bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] p-5 rounded-xl border border-[rgb(var(--ec-page-border))] hover:border-[rgb(var(--ec-accent))] hover:shadow-sm transition-all`}
                >
                  <div class={`absolute left-0 top-0 bottom-0 w-1 ${tile.bgColor} rounded-l-xl`} />
                  <div class="flex items-start justify-between mb-3">
                    <div class={`p-2 rounded-lg ${tile.iconBg || 'bg-[rgb(var(--ec-content-hover))]'}`}>
                      <tile.icon className={`w-4 h-4 ${tile.textColor}`} />
                    </div>
                    <ArrowRightIcon className="w-4 h-4 text-[rgb(var(--ec-icon-color))] group-hover:text-[rgb(var(--ec-page-text-muted))] transition-colors" />
                  </div>
                  <div class="text-2xl font-bold text-[rgb(var(--ec-page-text))] mb-0.5">{tile.count}</div>
                  <div class="text-sm text-[rgb(var(--ec-page-text-muted))]">{tile.description}</div>
                </a>
              ) : (
                <div class="relative bg-[rgb(var(--ec-content-hover))] p-5 rounded-xl border border-dashed border-[rgb(var(--ec-page-border))]">
                  <div class={`absolute left-0 top-0 bottom-0 w-1 bg-[rgb(var(--ec-icon-color))] rounded-l-xl`} />
                  <div class="flex items-start justify-between mb-3">
                    <div class="p-2 rounded-lg bg-[rgb(var(--ec-content-hover))]">
                      <tile.icon className="w-4 h-4 text-[rgb(var(--ec-icon-color))]" />
                    </div>
                  </div>
                  <div class="text-sm font-medium text-[rgb(var(--ec-page-text-muted))] mb-2">{tile.emptyText}</div>
                  <a
                    href={tile.addHref}
                    target="_blank"
                    class="inline-flex items-center gap-1 text-xs font-medium text-[rgb(var(--ec-page-text-muted))] hover:text-[rgb(var(--ec-page-text))]"
                  >
                    <PlusIcon className="w-3 h-3" />
                    Add {tile.title.toLowerCase()}
                  </a>
                </div>
              )
            )
          }
        </div>
      </section>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Quick Actions -->
          <section>
            <h2 class="text-lg font-semibold text-[rgb(var(--ec-page-text))] mb-4">Explore</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {
                quickActions.map((action) => (
                  <a
                    href={action.href}
                    class={`group flex items-start gap-4 bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] p-5 rounded-xl border border-[rgb(var(--ec-page-border))] hover:border-[rgb(var(--ec-accent))] hover:shadow-sm transition-all`}
                  >
                    <div class={`${action.iconBg} dark:bg-opacity-20 p-3 rounded-xl`}>
                      <action.icon className={`w-6 h-6 ${action.iconColor}`} />
                    </div>
                    <div class="flex-1 min-w-0 pt-0.5">
                      <div class="font-semibold text-[rgb(var(--ec-page-text))] group-hover:text-[rgb(var(--ec-page-text))] mb-1">{action.title}</div>
                      <div class="text-sm text-[rgb(var(--ec-page-text-muted))] leading-relaxed">{action.description}</div>
                    </div>
                  </a>
                ))
              }
            </div>
          </section>

          <!-- Additional Links -->
          <section class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <a
              href={buildUrl('/directory/users')}
              class="group flex items-center gap-4 bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] p-4 rounded-xl border border-[rgb(var(--ec-page-border))] hover:border-orange-400 dark:hover:border-orange-500 hover:shadow-sm transition-all"
            >
              <div class="bg-orange-50 dark:bg-orange-500/10 p-2.5 rounded-lg">
                <BookUser className="w-5 h-5 text-orange-600 dark:text-orange-400" />
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-[rgb(var(--ec-page-text))] group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">Team Directory</div>
                <div class="text-sm text-[rgb(var(--ec-page-text-muted))] truncate">Ownership & contacts</div>
              </div>
            </a>
            <a
              href="https://www.eventcatalog.dev/docs/sdk"
              target="_blank"
              class="group flex items-center gap-4 bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] p-4 rounded-xl border border-[rgb(var(--ec-page-border))] hover:border-indigo-400 dark:hover:border-indigo-500 hover:shadow-sm transition-all"
            >
              <div class="bg-indigo-50 dark:bg-indigo-500/10 p-2.5 rounded-lg">
                <Code2 className="w-5 h-5 text-indigo-600 dark:text-indigo-400" />
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-[rgb(var(--ec-page-text))] group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">API & SDK</div>
                <div class="text-sm text-[rgb(var(--ec-page-text-muted))] truncate">Programmatic access</div>
              </div>
            </a>
          </section>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Learn More -->
          <section class="bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] rounded-xl border border-[rgb(var(--ec-page-border))] p-5">
            <h3 class="font-semibold text-[rgb(var(--ec-page-text))] mb-4">Learn More</h3>
            <div class="space-y-3">
              {
                learnLinks.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    class="group flex items-start gap-3 text-sm hover:bg-[rgb(var(--ec-content-hover))] -mx-2 px-2 py-2 rounded-lg transition-colors"
                  >
                    <link.icon className="w-4 h-4 text-[rgb(var(--ec-icon-color))] mt-0.5 flex-shrink-0" />
                    <div>
                      <div class="font-medium text-[rgb(var(--ec-page-text))] group-hover:text-[rgb(var(--ec-page-text))]">{link.title}</div>
                      <div class="text-[rgb(var(--ec-page-text-muted))]">{link.description}</div>
                    </div>
                  </a>
                ))
              }
            </div>
          </section>

          <!-- Community -->
          <section class="bg-[rgb(var(--ec-card-bg,var(--ec-page-bg)))] rounded-xl border border-[rgb(var(--ec-page-border))] p-5">
            <h3 class="font-semibold text-[rgb(var(--ec-page-text))] mb-4">Community</h3>
            <div class="space-y-3">
              <a
                href="https://discord.gg/3rjaZMmrAm"
                target="_blank"
                class="group flex items-center gap-3 p-3 -mx-1 rounded-lg hover:bg-[rgb(var(--ec-content-hover))] transition-colors"
              >
                <div class="bg-indigo-100 dark:bg-indigo-500/20 p-2 rounded-lg">
                  <svg class="w-4 h-4 text-indigo-600 dark:text-indigo-400" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-medium text-[rgb(var(--ec-page-text))] group-hover:text-indigo-600 dark:group-hover:text-indigo-400">Join Discord</div>
                  <div class="text-xs text-[rgb(var(--ec-page-text-muted))]">Chat with the community</div>
                </div>
              </a>
              <a
                href="https://github.com/event-catalog/eventcatalog"
                target="_blank"
                class="group flex items-center gap-3 p-3 -mx-1 rounded-lg hover:bg-[rgb(var(--ec-content-hover))] transition-colors"
              >
                <div class="bg-[rgb(var(--ec-content-hover))] p-2 rounded-lg">
                  <svg class="w-4 h-4 text-[rgb(var(--ec-page-text))]" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-medium text-[rgb(var(--ec-page-text))] group-hover:text-[rgb(var(--ec-page-text))]">GitHub</div>
                  <div class="text-xs text-[rgb(var(--ec-page-text-muted))]">Star & contribute</div>
                </div>
              </a>
              <a
                href="https://www.eventcatalog.dev/docs"
                target="_blank"
                class="group flex items-center gap-3 p-3 -mx-1 rounded-lg hover:bg-[rgb(var(--ec-content-hover))] transition-colors"
              >
                <div class="bg-blue-100 dark:bg-blue-500/20 p-2 rounded-lg">
                  <DocumentTextIcon className="w-4 h-4 text-blue-600 dark:text-blue-400" />
                </div>
                <div>
                  <div class="text-sm font-medium text-[rgb(var(--ec-page-text))] group-hover:text-blue-600 dark:group-hover:text-blue-400">Documentation</div>
                  <div class="text-xs text-[rgb(var(--ec-page-text-muted))]">Guides & references</div>
                </div>
              </a>
            </div>
          </section>
        </div>
      </div>
    </main>
  </div>
</VerticalSideBarLayout>
