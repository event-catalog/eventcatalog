{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "homepage": "https://github.com/event-catalog/eventcatalog",
  "repository": {
    "type": "git",
    "url": "https://github.com/event-catalog/eventcatalog.git"
  },
  "scripts": {
    "build:bin": "npm run build:bin -w @eventcatalog/core",
    "test": "vitest",
    "test:ci": "npm run test:ci -w @eventcatalog/core",
    "test:e2e": "npm run test:e2e -w @eventcatalog/core",
    "build:cd": "npm run build:cd -w @eventcatalog/core",
    "start:catalog": "npm run start:catalog -w @eventcatalog/core",
    "verify-build:catalog": "npm run verify-build:catalog -w @eventcatalog/core",
    "changeset": "changeset",
    "release": "changeset publish",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json,astro}\"",
    "format:diff": "prettier --config .prettierrc --list-different \"**/*.{js,jsx,ts,tsx,json,astro}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5"
  },
  "workspaces": [
    "packages/core/",
    "packages/core/eventcatalog/"
  ]
}
