{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/event-catalog/eventcatalog.git"
  },
  "scripts": {
    "changeset": "changeset",
    "release": "changeset publish",
    "prepublishOnly": "npm run build -w=\"@eventcatalog/core\"",
    "test": "vitest",
    "test:ci": "node .github/scripts/test.js",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "start:catalog": "npm run start:catalog --workspace=\"@eventcatalog/core\"",
    "verify-build:catalog": "npm run verify-build:catalog --workspace=\"@eventcatalog/core\"",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json,astro}\"",
    "format:diff": "prettier --config .prettierrc --list-different \"**/*.{js,jsx,ts,tsx,json,astro}\""
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@changesets/cli": "^2.27.5",
    "@playwright/test": "^1.48.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5"
  },
  "workspaces": [
    "packages/core/",
    "packages/core/astro"
  ]
}
